.input
  height: 45px
  width 100%
  padding: 0 25px;
  font-family: 'OpenSans-Regular'
  font-weight: 400
  font-size: 14px;
  line-height: 110%
  color: #000
  border: 1px solid #fff
  border-radius: 5px;
  background: #fff
  position relative
  overflow hidden

  transition border-color 0.3s, box-shadow 0.3s, border 0.3s, background 0.3s
  &:hover
    border 1px solid #760000
  &:focus
    color: #000
    caret-color: #760000
    border 1px solid #760000
    box-shadow: 3px 3px 8px 0px #760000
    background: #fff
    &::placeholder
      color: #000
  &::placeholder
    color: #000
  +above($breakpoints.sm)
    border-radius: 8px
    padding: 0 15px;
    font-size: 14px;
    height: 50px
  +above($breakpoints.md)
    border-radius: 10px
    padding: 0 20px;
    font-size: 16px;
    height: 55px
  +above($breakpoints.xxl)
    border-radius: 13px
    padding: 0 25px;
    font-size: 18px;
    height: 59px
  &.error
    border 1px solid $color-error
    color: $color-error
    caret-color: $color-error
    box-shadow: 0px 0px 22px 0px $color-error
    background: #fff
    &::placeholder
      color: $color-error
    &::-ms-input-placeholder
      color: $color-error
    animation: shake 0.6s;
    @keyframes shake
      10%, 90%
        transform: translate3d(-1px, 0, 0)
      20%, 80%
        transform: translate3d(2px, 0, 0)
      30%, 50%, 70%
        transform: translate3d(-4px, 0, 0)
      40%, 60%
        transform: translate3d(4px, 0, 0)
