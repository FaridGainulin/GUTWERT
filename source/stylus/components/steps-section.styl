.steps-section
  background-image: url('../images/steps-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center
  background-color #100F0F

  &__container
    position relative
    z-index 1
    padding 20px 0
    +above($breakpoints.sm)
      padding 40px 0
    +above($breakpoints.md)
      padding 60px 0
    +above($breakpoints.xxl)
      padding 102px 0 96px

  &__img
    display: none
    +above($breakpoints.sm)
      display: block
      position: absolute
      height: auto
      bottom: 0
      width: 266px;
      left: 269px;
    +above($breakpoints.md)
      width 366px
      left: 370px
    +above($breakpoints.xxl)
      width 466px
      left: 436px

  &__title,
  &__sub-title,
  &__bottom
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__title,
  &__card
    color: #EDFAFF

  &__sub-title
    color: #C0C0C0
    padding 5px 0 15px
    +above($breakpoints.sm)
      padding 8px 0 30px
    +above($breakpoints.md)
      padding 10px 0 40px
    +above($breakpoints.xxl)
      padding 10px 0 57px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      gap: 15px 10px
    +above($breakpoints.md)
      gap: 20px 15px
    +above($breakpoints.xxl)
      gap: 25px 20px

  &__card
    position relative
    z-index 1
    width 280px !important
    display: flex
    flex-direction: column
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      width: 165px !important;
    +above($breakpoints.md)
      width: 225px !important;
    +above($breakpoints.xxl)
      width 280px !important

  &__card-icon
    position: absolute
    z-index -1
    width: 116px;
    height: auto;
    top: 1px;
    left: 101px;
    +above($breakpoints.sm)
      width: 100px;
      top: 7px;
      left: 0;
    +above($breakpoints.md)
      width: 115px;
      top: 6px;
    +above($breakpoints.xxl)
      width: 122px;
      top: 7px;

  &__card-title
    text-transform: uppercase
    color: #100F0F
    padding 5px 0 20px 6px
    +above($breakpoints.sm)
      padding 8px 0 25px 6px
    +above($breakpoints.md)
      padding 10px 0 30px 6px
    +above($breakpoints.xxl)
      padding 12px 0 38px 4px

  &__bottom
    display: flex
    flex-direction: column
    align-items: center
    +above($breakpoints.sm)
      align-items: flex-start
      margin-top 60px
    +above($breakpoints.md)
      margin-top 90px
    +above($breakpoints.xxl)
      margin-top 145px

  &__bottom-title
    position relative
    z-index 1
    &:after
      content: ""
      position: absolute
      background-color #fff
      height: 1px
      width 110px
      bottom: -3px
      left: 0
      +above($breakpoints.sm)
        width 133px
      +above($breakpoints.md)
        width 183px
      +above($breakpoints.xxl)
        width 218px

  &__bottom-text
    padding 5px 0 15px
    +above($breakpoints.sm)
      padding 10px 0 20px
    +above($breakpoints.md)
      padding 12px 0 25px
    +above($breakpoints.xxl)
      padding 13px 0 30px

  &__btn
    width 280px !important
    +above($breakpoints.sm)
      width 260px !important
    +above($breakpoints.md)
      width 300px !important
    +above($breakpoints.xxl)
      width 320px !important
