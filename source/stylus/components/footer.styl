.footer
  background-color: #222222

  &__container
    display: flex
    align-items: center
    flex-direction: column
    gap: 10px
    padding 15px 0
    +above($breakpoints.sm)
      flex-direction: row
      justify-content space-between
      padding 20px 0
    +above($breakpoints.md)
      padding 25px 0
    +above($breakpoints.xxl)
      padding 38px 0 37px

  &__brand-block
    +above($breakpoints.sm)
      display: flex
      align-items: center
      gap: 10px
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 19px

  &__logo
    width 80px
    height: auto
    +above($breakpoints.sm)
      width 70px
    +above($breakpoints.md)
      width 75px
    +above($breakpoints.xxl)
      width 81px

  &__brand
    display: none
    +above($breakpoints.sm)
      display: flex
      flex-direction: column

  &__privacy
    cursor pointer
    text-decoration: underline
    color: rgba(255, 255, 255, 0.5)

  &__connection
    display: flex
    align-items: center
    gap: 6px
    padding 5px
    background-color #313131
    border-radius: 30px
    width 135px
    +above($breakpoints.sm)
      gap: 12px;
      padding 8px 5px 8px 8px
      width 170px
    +above($breakpoints.md)
      gap: 15px;
      padding 10px 5px 10px 9px
      width 216px
    +above($breakpoints.xxl)
      gap: 18px
      padding 11px 5px 12px 10px
      width 240px

  &__connection-icon
    width 20px
    height: 20px
    +above($breakpoints.sm)
      width 25px
      height: 25px
    +above($breakpoints.md)
      width 30px
      height: 30px
    +above($breakpoints.xxl)
      width 33px
      height: 33px
